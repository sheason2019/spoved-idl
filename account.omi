struct User {
  string username;
}

struct AccountInfo {
  string username;
  string password;

  string salt;
}

struct AccountCrypto {
  string salt;
  string pubKey;
}

struct LoginResponse {
  string token;
}

struct GetUsernameRepeatResponse {
  boolean repeat;
}

service AccountService {
  AccountCrypto GetAccountCrypto();

  LoginResponse Login(AccountInfo account);
  void Regist(AccountInfo account);

  GetUsernameRepeatResponse GetUsernameRepeat();
  User GetCurrentUser();
}